<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="8dp"    
    android:layout_height="wrap_content">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:background="@color/centercolor"
        android:alpha="0.8"
        android:gravity="end"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/journal_row_username"
            android:layout_width="wrap_content"
            android:padding="3dp"
            android:text="JJ"
            android:layout_weight="1"
            android:textSize="18sp"
            android:gravity="start"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:id="@+id/journal_row_sharebutton"
            android:src="@android:drawable/ic_menu_share"
            android:background="@android:color/transparent"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>
    
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/journal_image_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"

            android:cropToPadding="true"
            android:paddingTop="25sp"
            android:scaleType="fitCenter"
            android:src="@drawable/image_three" />

        <TextView
            android:id="@+id/journal_title_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:paddingStart="10dp"
            android:paddingTop="15dp"
            android:paddingEnd="15dp"
            android:text="Title"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/journal_thought_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:paddingStart="10dp"
            android:paddingTop="15dp"
            android:paddingEnd="15dp"
            android:text="thought"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!--TextView
            android:id="@+id/journal_timestamp_list"
            android:padding="5dp"
            android:textStyle="italic"
            android:text="Date Created"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/-->



    </LinearLayout>


</androidx.cardview.widget.CardView>